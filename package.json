    "build:debug": "run-s webpack-debug collectstatic",
    "build:prod": "run-s webpack collectstatic",
    "build:both": "run-p webpack webpack-debug",
    "build:all": "run-s build:both collectstatic",
    "clean:debug": "run-s clean build:debug collectstatic",
    "clean:prod": "run-s clean build:prod collectstatic",
    "clean:build": "run-s clean build:both collectstatic",

    "lint:sass": "sass-lint -v",
    "lint": "lint-sass",
    "watch:lint": "chokidar 'src/sass/**/*.sass' 'src/sass/**/*.scss' -c 'npm run lint'",
    "develop": "concurrently --names 'ğŸ›>build,ğŸ¦‹>build,ğŸ£>>dist,ğŸŒserver' --prefix-colors 'blue,cyan,green,gray' 'npm run watch:webpack-debug' 'npm run watch:webpack' 'npm run watch:collectstatic' 'pipenv run server'"
