  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -Rf static/* && rm -Rf var/build/*",

    "webpack": "webpack",
    "webpack-debug": "webpack --env debug",
    "watch:webpack": "webpack --watch",
    "watch:webpack-debug": "webpack --env debug --watch",

    "collectstatic": "rm -Rf static/* && pipenv run manage collectstatic",
    "watch:collectstatic": "chokidar 'var/build/**/*.*' --debounce 1200 -c 'npm run collectstatic'",

    "watch:debug": "concurrently --names '>buildğŸ›,>static' --prefix-colors 'blue,green' 'npm run watch:webpack-debug' 'npm run watch:collectstatic'",
    "watch:prod": "concurrently --names '>buildğŸ¦‹,>static' --prefix-colors 'cyan,green' 'npm run watch:webpack' 'npm run watch:collectstatic'",
